<%= form_for [:admin, preferences] do |f| %>

  <div>
    <%= f.label :artist_sort_order %><br>
    <%= f.label :artist_sort_order, "Ascending" %>
    <%= f.radio_button :artist_sort_order, "ASC" %>
    <%= f.label :artist_sort_order, "Descending" %>
    <%= f.radio_button :artist_sort_order, "DESC" %>
  </div>
  <br>

  <div>
    <%= f.label :song_sort_order %><br>
    <%= f.label :song_sort_order, "Ascending" %>
    <%= f.radio_button :song_sort_order, "ASC" %>
    <%= f.label :song_sort_order, "Descending" %>
    <%= f.radio_button :song_sort_order, "DESC" %>
  </div>
  <br>

  <div>
    <%= f.label :allow_create_songs %><br>
    <%= f.label :allow_create_songs, "True" %>
    <%= f.check_box :allow_create_songs %>
  </div>
  <br>

  <div>
    <%= f.label :allow_create_artists %><br>
    <%= f.label :allow_create_artists, "True" %>
    <%= f.check_box :allow_create_artists %>
  </div>
  <br>
  
  <%= f.submit "Update Controls" %>

<% end %>
